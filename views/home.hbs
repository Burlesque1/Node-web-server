<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Some Website</title>
  </head>
  <body>
    {{> header}}

    <form action="/room" method="POST">
      email: <input type="email" name="email" placeholder="e-mail address" autofocus required>    
      password: <input type="password" name="password" placeholder="password" minlength=6 required>
      <input type="submit" value="log in">
    
    </form>
    
    <form action="/signup" method="POST">
      email: <input type="email" name="email" placeholder="e-mail address" autofocus required>    
      password: <input type="password" name="password" placeholder="password" minlength=6 required>
      <input type="submit" value="sign up">
    </form>
      
    <p>{{screamIt welcomeMessage}}</p>

    {{> footer}}
  </body>
</html>
